# MentionFi Oracle Configuration
# Copy to .env and fill in values

# Required: Oracle wallet private key (with 0x prefix)
PRIVATE_KEY=0x...

# Required: MentionQuest contract address
QUEST_ADDRESS=0x4e5c8a5B099260d7c7858eE62E55D03a9015e39c

# Optional: RPC URL (defaults to MegaETH testnet)
RPC_URL=https://carrot.megaeth.com/rpc

# Optional: Health check server port (default: 3000)
PORT=3000

# Optional: Check interval in milliseconds (default: 30000)
INTERVAL_MS=30000

# Optional: Additional keywords to track (comma-separated)
KEYWORDS=megaeth,mytoken,mycoin
